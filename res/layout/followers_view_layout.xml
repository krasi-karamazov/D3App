<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView 
            android:id="@+id/follower_paper_doll"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/follower_enchantress"/>
        <ImageView
            android:id="@+id/main_hand"
            android:layout_width="40dp"
            android:layout_height="80dp"
            android:layout_alignRight="@+id/follower_paper_doll"
            android:layout_alignTop="@+id/follower_paper_doll"
            android:layout_marginRight="115dp"
            android:layout_marginTop="6dp" />

        <ImageView
            android:id="@+id/special"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignTop="@+id/main_hand"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/main_hand" />

        <ImageView
            android:id="@+id/off_hand"
            android:layout_width="40dp"
            android:layout_height="80dp"
            android:layout_alignRight="@+id/follower_paper_doll"
            android:layout_alignTop="@+id/main_hand"
            android:layout_marginRight="9dp" />

        <ImageView
            android:id="@+id/neck"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignTop="@+id/special"
            android:layout_marginRight="14dp"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@+id/off_hand" />

        <ImageView
            android:id="@+id/left_finger"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@+id/special"
            android:layout_marginRight="-12dp"
            android:layout_marginTop="4dp"
            android:layout_toLeftOf="@+id/neck" />

        <ImageView
            android:id="@+id/right_finger"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignTop="@+id/left_finger"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/off_hand" />
    </RelativeLayout>
	<LinearLayout 
	    android:id="@+id/skills_container"
	    android:layout_width="match_parent" android:layout_height="wrap_content"
	    android:layout_marginTop="10dp">
        <LinearLayout 
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView 
		        android:id="@+id/skill_image_1"
		        android:layout_width="match_parent" android:layout_height="wrap_content"
		        android:maxWidth="42dp" android:maxHeight="42dp"
		        
		        android:src="@android:drawable/ic_delete"/>
            <TextView 
                android:id="@+id/skill_label_1"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
	    <LinearLayout 
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView 
		        android:id="@+id/skill_image_2"
		        android:layout_width="match_parent" android:layout_height="wrap_content"
		        android:maxWidth="42dp" android:maxHeight="42dp"
		        
		        android:src="@android:drawable/ic_delete"/>
            <TextView 
                android:id="@+id/skill_label_2"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
	    <LinearLayout 
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView 
		        android:id="@+id/skill_image_3"
		        android:layout_width="match_parent" android:layout_height="wrap_content"
		        android:maxWidth="42dp" android:maxHeight="42dp"
		        
		        android:src="@android:drawable/ic_delete"/>
            <TextView 
                android:id="@+id/skill_label_3"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView 
		        android:id="@+id/skill_image_4"
		        android:layout_width="match_parent" android:layout_height="wrap_content"
		        android:maxWidth="42dp" android:maxHeight="42dp"
		        
		        android:src="@android:drawable/ic_delete"/>
            <TextView 
                android:id="@+id/skill_label_4"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
	</LinearLayout>
</LinearLayout>