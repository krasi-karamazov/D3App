                android:gravity="center"
                android:orientation="vertical">
	            <FrameLayout
	                android:id="@+id/gem2_torso_socket"
	                android:layout_width="wrap_content" android:layout_height="match_parent"
	                android:layout_weight=".3"
	                android:alpha=".6">
